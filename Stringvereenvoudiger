package Rekenmachine;

import java.util.LinkedList;

public class Stringvereenvoudiger {

    //vind_tweede_kar("2+10+9", '+') geeft 4 als '+' in de characterlijst staat
    public int split_2e_kar(String str, LinkedList<Character> karlijst){
        int teller = 0; //nog 0 keer kar1 of kar2 gezien
        for(int i = 0; i<= str.length(); i++){
            if(karlijst.contains(str.charAt(i))){
                teller++;
                if(teller == 2){
                    return(i);
                }
            }
        }
    return(str.length());
    }

    // bewerkerverwijderen(2*10/11, */) geeft 20.0//11
    public String bewerker_verwijderen(String str, LinkedList<Character> karlijst){
        String substring = str.substring(0,split_2e_kar(str, karlijst));
        Rekenen optel = new Rekenen();
        Double substring_naar_double = optel.resultaat_optel(substring);
        String double_naar_string = Double.toString(substring_naar_double);
        String str_nieuw = str.replaceFirst(substring, double_naar_string);
        return(str_nieuw);
    }

    public static void main(String[] args) {
        Stringvereenvoudiger vereenv = new Stringvereenvoudiger();
        LinkedList<Character> karakters = new LinkedList<Character>();
        karakters.add('+');
        System.out.println(vereenv.bewerker_verwijderen("2+1+4+8", karakters));
    }
}
